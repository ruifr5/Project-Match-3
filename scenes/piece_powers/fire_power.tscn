script/source = "extends Power

var alpha_values = [0.3, 1]
var enemy_grid: MyGrid

func _ready():
	start_alpha_tween()


func _exit_tree():
	if $lifetime.time_left > 0:
		var parent_position = get_parent().position
		enemy_grid.get_node(\"grid_hp\").attack_position(enemy_grid.pixel_to_grid(parent_position))


func exec(enemy_grid: MyGrid, origin: Vector2):
	self.enemy_grid = enemy_grid
	
#	get random non-burning piece
	var piece = try_get_random_piece(enemy_grid)
	piece.add_child(self)
	
	emit_particle_effect(origin, piece.position, Color.orangered)


func start_alpha_tween():
	$alpha_tween.interpolate_property(self, \"modulate:a\", alpha_values[0], alpha_values[1], 0.5) 
	$alpha_tween.start()


func _on_alpha_tween_tween_all_completed():
	alpha_values.invert()
	start_alpha_tween()


func _on_lifetime_timeout():
	queue_free()
"

